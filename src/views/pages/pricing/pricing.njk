<!DOCTYPE html>
{% set bs4 = true %}
<html lang="en">
	{% from "universal/_header-macro.njk" import header %}
	{{ header(bs4=bs4, scss=false) }}
	<body>
		{% include "universal/_preload.njk" %}
		{% from "universal/_navbar-switch.njk" import navbar %}
		{{ navbar(bs4=bs4) }}

    <article class="container my-5">
      <section class="row justify-content-center">
        <div class="col-6 text-center">
          <h2>Simple Pricing</h2>
        </div>
      </section>

      <section class="row justify-content-center mt-3">
        <div class="col-2 text-center">
          <button class="btn kbl-switch current pricing">Sequencing</button>
        </div>

        <div class="col-2 text-center">
          <button class="btn kbl-switch pricing">Custom</button>
        </div>
      </section>

      <section class="row justify-content-center mt-3">
        <div class="col-4">
          <div class="kbl-pricing-item text-center">
            <h4 class="name">RNA-Seq</h4>
          </div>
        </div>
      </section>
    </article>

		{% from "universal/_footer-switch.njk" import footer %}
		{{ footer(bs4=bs4) }}
		{% from "universal/_scripts-macro.njk" import scripts %}
		{{ scripts(bs4=bs4) }}

	</body>
</html>
